<Window x:Class="DragonSlayer.CreateCharacter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DragonSlayer"
        mc:Ignorable="d"
        Title="CreateCharacter" Height="350" Width="200">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="65" Margin="40,149,0,0" VerticalAlignment="Top" Width="120" Name="type">
            <ListBoxItem Name="Mage">Mage</ListBoxItem>
            <ListBoxItem>Paladin</ListBoxItem>
            <ListBoxItem>Warrior</ListBoxItem>
        </ListBox>
        <Label Content="Choose your class" HorizontalAlignment="Left" Margin="40,123,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name your slayer" HorizontalAlignment="Left" Margin="40,40,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="40,66,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="characterName"/>
        <Button Content="Create Character" HorizontalAlignment="Left" Margin="40,245,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
    </Grid>
</Window>
